#include <stdio.h>
long long power(int base, int exp) {
    if (exp == 0) {
        return 1;
    }
    else {
        return base * power(base, exp - 1);
    }
}
int main() {
    int base, exp;
    printf("Enter base number: ");
    scanf("%d", &base);
    printf("Enter exponent (positive): ");
    scanf("%d", &exp);
    printf("%d^%d = %lld\n", base, exp, power(base, exp));
    return 0;
}

output:
Enter base number: 5
Enter exponent (positive): 3
5^3 = 125
